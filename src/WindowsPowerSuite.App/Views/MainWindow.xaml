<ui:Window x:Class="WindowsPowerSuite.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="WindowsPowerSuite"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Navigation Sidebar -->
            <ColumnDefinition Width="250" />
            <!-- Main Content Area -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Application Title -->
                <StackPanel Grid.Row="0" Margin="20,20,20,10">
                    <TextBlock Text="WindowsPowerSuite"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="v1.0.0"
                               FontSize="12"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,4,0,0" />
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="SYSTEM"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   Margin="10,5,0,5" />

                        <!-- Navigation items will be added here -->
                        <Button Content="Dashboard"
                                Style="{StaticResource NavigationButtonStyle}"
                                Margin="0,2" />
                        <Button Content="System Information"
                                Style="{StaticResource NavigationButtonStyle}"
                                Margin="0,2" />
                        <Button Content="Process Manager"
                                Style="{StaticResource NavigationButtonStyle}"
                                Margin="0,2" />

                        <TextBlock Text="UTILITIES"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   Margin="10,15,0,5" />

                        <!-- More navigation items -->
                    </StackPanel>
                </ScrollViewer>

                <!-- Settings Button -->
                <StackPanel Grid.Row="2" Margin="10">
                    <Separator Margin="0,10" />
                    <Button Content="Settings"
                            Style="{StaticResource NavigationButtonStyle}" />
                    <Button Content="About"
                            Style="{StaticResource NavigationButtonStyle}"
                            Margin="0,5,0,10" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar / Breadcrumb -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    Padding="20,15">
                <Grid>
                    <TextBlock Text="Dashboard"
                               FontSize="24"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Frame Grid.Row="1"
                   x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Margin="20" />

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Ready"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="Windows 11 Pro"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   Margin="0,0,15,0" />
                        <TextBlock x:Name="StatusText"
                                   Text=""
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ui:Window>
